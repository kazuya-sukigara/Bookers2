

<h1>User info</h1>
<div class="form-group has-icon">
     <div class="user-edit-image">
         <%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
     </div>
     <table class= "table">
      <tbody>
        <tr>
            <td>name</td>
            <td><%= user.name %></td>
        </tr>
        <tr>
            <td>introduction</td>
            <td><%= user.introduction %></td>
        </tr>
      </tbody>
     </table>


<%= link_to  edit_user_path(user.id), class: 'btn btn-default' do %> 
<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
<% end %> 


</div>

<h1>New book</h1>

<%= form_for(book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>


    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>

