<div class ="container">
<div class="row">
  <div class ="col-xs-3">

<h1>Editing Book</h1>

<% if flash[:error_messages] %>
  <div class="">
    <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
    <ul>
      <% flash[:error_messages].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@book)do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>
<%= link_to 'Show', book_path(@book)%>
<%= link_to 'Back', books_path %>
<% end %>
</div></div></div>


