<div class ="container">
<div class="row">
  <div class ="col-xs-3">
<%= render'books/list',book:@book ,user:current_user %>
  </div>
  <div class ="col-xs-9">

<h1>Users</h1>

<table class= "table">
	
	<tr>

		<th>image</th>
		<th>name</th>
		<th></th>
		
		
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
			
			<td><%= user.name %></td>
			<td><%= link_to 'Show', user_path(user) %></td>
		</tr>
	<% end %>

</table>
</div>
</div>

